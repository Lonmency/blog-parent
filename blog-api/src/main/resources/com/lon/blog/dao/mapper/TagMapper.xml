<?xml version="1.0" encoding="UTF-8" ?>
<!--MyBatis配置文件-->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lon.blog.dao.mapper.TagMapper">

    <!-- List<Tag> findTagsByArticleId(Long articleId);-->
    <select id="findTagsByArticleId" parameterType="long" resultType="com.lon.blog.dao.pojo.Tag">
--         select id,avatar,tag_name as tagName from  lt_tag
        select id,avatar,tag_name from  lt_tag
        where id in
        (select tag_id from lt_article_tag where article_id=#{articleId})
    </select>
    <!-- List<Long> findHotsTagIds(int limit);-->
    <select id="findHotsTagIds"  parameterType="int" resultType="java.lang.Long">
        SELECT  tag_id FROM `lt_article_tag` group by tag_id order by count(*) desc limit #{limit}
    </select>
    <!-- List<Tag> findTagsByTagIds(List<Long> tagIds);-->
    <select id="findTagsByTagIds" parameterType="list" resultType="com.lon.blog.dao.pojo.Tag">
        select id,tag_name from lt_tag
        where id in
        <foreach collection="tagIds" item="tagId" separator="," open="(" close=")">
            #{tagId}
        </foreach>
    </select>
</mapper>